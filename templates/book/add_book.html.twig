{% extends 'base.html.twig' %}

{% block title %}Ajouter un Livre{% endblock %}

{% block stylesheets %}
    {# Include the Bootstrap CSS #}
    <link rel="stylesheet" href="{{ asset('css/form-styles.css') }}">
</style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Ajouter un Livre</h1>

        {{ form_start(form) }}

        <div class="form-group mt-3">
            {{ form_row(form.ref, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mt-3">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mt-3">
            {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mt-3">
            {{ form_row(form.publicationDate, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mt-3">
            {{ form_row(form.published, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
        {{ form_end(form) }}
    </div>
</body>

{% endblock %}
